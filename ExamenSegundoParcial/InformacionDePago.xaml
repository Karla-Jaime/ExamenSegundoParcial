<UserControl x:Class="ExamenSegundoParcial.InformacionDePago"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamenSegundoParcial"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="Beige">
        <TextBlock FontFamily="arial" FontSize="16" Margin="20,5,20,5">Número de Tarjeta</TextBlock>
        <TextBox Name="BoxNumT" Margin="20,5,20,5"></TextBox>
        <TextBlock FontFamily="arial" FontSize="16" Margin="20,5,20,5" >CVV:</TextBlock>
        <TextBox Name="BoxCVV"  Margin="20,5,20,5"></TextBox>
        <TextBlock FontFamily="arial" FontSize="16" Margin="20,5,20,5" >Mes de Expiración:</TextBlock>
        <TextBox Name="BoxMesExp"  Margin="20,5,20,5"></TextBox>
        <TextBlock FontFamily="arial" FontSize="16" Margin="20,5,20,5" >Año de Expiración:</TextBlock>
        <TextBox Name="BoxAnExp"  Margin="20,5,20,5"></TextBox>
    </StackPanel>
</UserControl>
